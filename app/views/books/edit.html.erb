<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>
    <h4>Body</h4>
    <%= f.text_area :body, class: "book_body" %>
    <h4></h4>
    <%= f.submit 'Update Book' %>
    <h4></h4>
    <%= link_to "Show", book_path(@book), class: "show_#{@book.id}" %>

    <%= link_to "Back", "/books", class: "back_#{@book.id}" %>
<% end %>